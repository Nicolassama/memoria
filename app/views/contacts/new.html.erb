<div class="about-body">
	<div class="frame-contact">
		<h3>お問い合わせ内容</h3>
			<% flash.each do |type,msg| %>
				<%= msg %>
			<% end %>

			<div class="group">
				<%= form_for @contact do |f| %>
					<div class="form-group">
				    <%= f.label :name, '名前', class: 'form' %>
				    <%= f.text_field :name, size: '40x5', class: 'form-contact' %>
				  </div>

	 				<div class="form-group">
				    <%= f.label :email, '返信先メールアドレス', class: 'form' %>
	 			   <%= f.text_field :email, size: '45x5', class: 'form-contact' %>
				  </div>

				  <div class="form-group">
	 			  	<%= f.label :title, '件名', class: 'form' %>
	 			   	<%= f.text_field :title, size: '40x5', class: 'form-contact' %>
	 				</div>

				 	<div class="form-group">
				   	<%= f.label :body, 'お問い合わせ内容', class: 'form' %><br>
				   	<%= f.text_area :body, size: '60x13', class: 'form-contact' %>
					</div>

	  			<%= f.submit '送信', class: 'submit' %>

				<% end %>
			</div>
	</div>
</div>