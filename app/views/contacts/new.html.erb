
<div class="about-body">

	<div class="frame">
		<h3>お問い合わせ内容</h3>

			<div class="group">

				<%= form_for @contact do |f| %>
					<div class="form-group">
				    <%= f.label :name, '名前', class: 'form' %>
				    <%= f.text_field :name, size: '50x10', class: 'form-control' %>
				  </div>

	 				<div class="form-group">
				    <%= f.label :email, '返信先メールアドレス' %>
	 			   <%= f.text_field :email, size: '50x10', class: 'form-control' %>
				  </div>

				  <div class="form-group">
	 			  	<%= f.label :title, '件名' %>
	 			   	<%= f.text_field :title, size: '50x10', class: 'form-control' %>
	 				</div>

				 	<div class="form-group">
				   	<%= f.label :body, 'お問い合わせ内容' %><br>
				   	<%= f.text_area :body, size: '50x5', class: 'form-control' %>
					</div>

	  			<%= f.submit '送信', class: 'submit' %>

				<% end %>
			</div>

	</div>
</div>