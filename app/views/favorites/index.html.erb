<div class="body">
	<h1 class="favorite-heading">お気に入り一覧</h1>
		<div class="contaoner">
			<% flash.each do |type,msg| %>
				<%= msg %>
			<% end %>

			<% @favorites.each do |favorite| %>
				<div class="table memo-form">
					<div class="post-image">
						<%= image_tag favorite.memo.user.image.to_s, :size =>'50x50', class: 'post-image' do %>
						<% end %>
					</div>

					<div class="user-name">
						<%= link_to favorite.memo.user.name, user_path(favorite.memo.user.id) %>
					</div>
	  				<% memo = Memo.find_by(id: favorite.memo_id) %>
	  				<% user = User.find_by(id: memo.user_id) %>
					<div class="memo-title">
						<%= link_to favorite.memo.title, memo_path(favorite.memo.id) %>
					</div>
					<br>
	  			<span class-"memo-body"><%= favorite.memo.body %></span>
	  			<!-- いいねとコメント -->
	  				<div class="favorite">
	  					<%= link_to "", memo_path(favorite.memo.id), class: "glyphicon glyphicon-comment" %>
	  					<%= favorite.memo.comments.count %>
	  					<div id="likes_buttons_<%= memo.id %>">
								<%= render partial: 'favorites/like', locals: { memo: memo} %>
     					</div>
						</div>
					<!-- ここまで -->
  			</div>
			<% end %>
		</div>
</div>



