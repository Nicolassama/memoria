
<h1>新規投稿</h1>
	<div class="post">
		<div class="post-form">
			<%= form_for @memo do |memo| %>

		 	<%= memo.text_field :title %>

		 	<%= memo.text_area :body %>

		 	<%= memo.submit '投稿' %>

		<% end %>
		</div>
	<% @memos.each do |memos| %>

		<span><%= memos.title %></span>
		<span><%= memos.body %></span>

	<% end %>

</div>
















